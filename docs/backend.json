
{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the e-commerce platform.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user."
        },
        "firstName": {
          "type": "string",
          "description": "First name of the user."
        },
        "lastName": {
          "type": "string",
          "description": "Last name of the user."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        }
      },
      "required": [
        "id",
        "email"
      ]
    },
    "Product": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Product",
      "type": "object",
      "description": "Represents a product in the e-commerce catalog.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the product."
        },
        "name": {
          "type": "string",
          "description": "Name of the product."
        },
        "description": {
          "type": "string",
          "description": "Description of the product."
        },
        "price": {
          "type": "number",
          "description": "Price of the product."
        },
        "originalPrice": {
          "type": "number",
          "description": "The original price of the product, before any discount."
        },
        "imageUrls": {
          "type": "array",
          "description": "Default URLs of the product images, used if no variants exist.",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "imageHints": {
          "type": "array",
          "description": "Default AI hints for the product images.",
          "items": {
            "type": "string"
          }
        },
        "variants": {
            "type": "array",
            "description": "Color and image variants for the product.",
            "items": {
                "$ref": "#/entities/ProductVariant"
            }
        },
        "rating": {
            "type": "number",
            "description": "Product rating out of 5."
        },
        "category": {
            "type": "string",
            "description": "Product category."
        },
        "brand": {
            "type": "string",
            "description": "Product brand."
        },
        "sizes": {
            "type": "array",
            "description": "Available sizes for the product.",
            "items": {
                "type": "string"
            }
        },
        "isFeatured": {
            "type": "boolean",
            "description": "Whether the product is a featured product."
        },
        "isDeal": {
            "type": "boolean",
            "description": "Whether the product is part of a daily deal."
        },
        "isBestSeller": {
            "type": "boolean",
            "description": "Whether the product is a best seller."
        },
        "dealEndDate": {
            "type": "string",
            "format": "date-time",
            "description": "The end date for the daily deal."
        },
        "material": {
          "type": "string",
          "description": "The material of the product."
        },
        "countryOfOrigin": {
            "type": "string",
            "description": "The country of origin for the product."
        },
        "features": {
            "type": "array",
            "description": "A list of key features for the product.",
            "items": {
                "type": "string"
            }
        },
        "stock": {
            "type": "number",
            "description": "The available quantity of the product."
        }
      },
      "required": [
        "id",
        "name",
        "description",
        "price",
        "imageUrls",
        "imageHints",
        "rating",
        "category",
        "brand",
        "stock"
      ]
    },
    "ProductVariant": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "ProductVariant",
        "type": "object",
        "description": "Represents a color variant of a product.",
        "properties": {
            "color": {
                "type": "string",
                "description": "Name of the color (e.g., 'Red', 'Midnight Blue')."
            },
            "hex": {
                "type": "string",
                "description": "Hexadecimal code for the color (e.g., '#FF0000')."
            },
            "imageUrls": {
                "type": "array",
                "description": "URLs of the images for this color variant.",
                "items": {
                    "type": "string",
                    "format": "uri"
                }
            },
            "imageHints": {
                "type": "array",
                "description": "AI hints for the images of this color variant.",
                "items": {
                    "type": "string"
                }
            }
        },
        "required": ["color", "hex", "imageUrls", "imageHints"]
    },
    "Category": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Category",
      "type": "object",
      "description": "Represents a product category, which can be a main category or a sub-category.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the category."
        },
        "name": {
          "type": "string",
          "description": "Name of the category."
        },
        "parentId": {
          "type": [ "string", "null" ],
          "description": "The ID of the parent category. If null, it's a main category."
        }
      },
      "required": [
        "id",
        "name"
      ]
    },
    "Brand": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Brand",
      "type": "object",
      "description": "Represents a brand for products.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the brand."
        },
        "name": {
          "type": "string",
          "description": "Name of the brand."
        },
        "logoUrl": {
          "type": "string",
          "description": "URL of the brand logo.",
          "format": "uri"
        },
        "logoHint": {
          "type": "string",
          "description": "AI hint for the brand logo."
        }
      },
      "required": [
        "id",
        "name",
        "logoUrl",
        "logoHint"
      ]
    },
    "Order": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Order",
      "type": "object",
      "description": "Represents a customer order.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the order."
        },
        "orderNumber": {
            "type": "number",
            "description": "Sequential, human-readable order number."
        },
        "userId": {
          "type": "string",
          "description": "Reference to User. (Relationship: User 1:N Order)"
        },
        "orderDate": {
          "type": "string",
          "description": "Date the order was placed.",
          "format": "date-time"
        },
        "totalAmount": {
          "type": "number",
          "description": "Total amount of the order, including shipping."
        },
        "shippingCost": {
          "type": "number",
          "description": "Cost of shipping for the order."
        },
        "status": {
          "type": "string",
          "description": "Status of the order (e.g., pending, processing, shipped, delivered).",
          "enum": ["Processing", "Shipped", "Delivered", "Cancelled"]
        },
        "shippingAddress": {
            "$ref": "#/entities/ShippingAddress"
        }
      },
      "required": [
        "id",
        "userId",
        "orderDate",
        "totalAmount",
        "shippingCost",
        "status",
        "shippingAddress"
      ]
    },
    "OrderItem": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "OrderItem",
      "type": "object",
      "description": "Represents an item within an order.",
      "properties": {
        "productId": {
          "type": "string",
          "description": "Reference to Product. (Relationship: Product 1:N OrderItem)"
        },
        "name": {
          "type": "string",
          "description": "Name of the product."
        },
        "imageUrl": {
            "type": "string",
            "description": "URL of the product image.",
            "format": "uri"
        },
        "quantity": {
          "type": "number",
          "description": "Quantity of the product in the order item."
        },
        "itemPrice": {
          "type": "number",
          "description": "Price of the item at the time of the order."
        },
        "selectedSize": {
            "type": "string",
            "description": "The size selected for the item, if applicable."
        },
        "selectedColor": {
            "type": "string",
            "description": "The color selected for the item, if applicable."
        }
      },
      "required": [
        "productId",
        "name",
        "imageUrl",
        "quantity",
        "itemPrice"
      ]
    },
    "ShippingAddress": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ShippingAddress",
      "type": "object",
      "description": "Represents a shipping address for a user.",
      "properties": {
        "fullName": {
            "type": "string",
            "description": "Full name of the recipient."
        },
        "phone": {
            "type": "string",
            "description": "Phone number of the recipient."
        },
        "address": {
          "type": "string",
          "description": "Address line."
        },
        "city": {
          "type": "string",
          "description": "City of the address."
        },
        "governorate": {
          "type": "string",
          "description": "Governorate/State of the address."
        },
        "postalCode": {
          "type": "string",
          "description": "Postal code of the address."
        }
      },
      "required": [
        "fullName",
        "phone",
        "address",
        "city",
        "governorate",
        "postalCode"
      ]
    },
    "HeroSection": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "HeroSection",
      "type": "object",
      "description": "Represents the content of the hero section on the homepage.",
      "properties": {
        "headline": {
          "type": "string",
          "description": "The main headline text."
        },
        "subheading": {
          "type": "string",
          "description": "The subheading text below the main headline."
        },
        "imageUrl": {
          "type": "string",
          "format": "uri",
          "description": "URL for the background image."
        },
        "imageHint": {
          "type": "string",
          "description": "AI hint for the background image."
        },
        "primaryActionText": {
          "type": "string",
          "description": "Text for the primary call-to-action button."
        },
        "primaryActionLink": {
          "type": "string",
          "description": "URL for the primary call-to-action button."
        },
        "secondaryActionText": {
          "type": "string",
          "description": "Text for the secondary call-to-action button."
        },
        "secondaryActionLink": {
          "type": "string",
          "description": "URL for the secondary call-to-action button."
        }
      },
      "required": [
        "headline",
        "subheading",
        "imageUrl",
        "imageHint",
        "primaryActionText",
        "primaryActionLink",
        "secondaryActionText",
        "secondaryActionLink"
      ]
    },
    "SocialLinks": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "SocialLinks",
      "type": "object",
      "description": "Stores the social media links for the website.",
      "properties": {
        "facebook": {
          "type": "string",
          "format": "uri",
          "description": "URL to the Facebook page."
        },
        "instagram": {
          "type": "string",
          "format": "uri",
          "description": "URL to the Instagram profile."
        },
        "tiktok": {
          "type": "string",
          "format": "uri",
          "description": "URL to the TikTok profile."
        }
      }
    },
    "ShippingGovernorate": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "ShippingGovernorate",
        "type": "object",
        "description": "Represents a shipping governorate and its associated cost.",
        "properties": {
            "id": {
                "type": "string",
                "description": "Unique identifier for the governorate."
            },
            "name": {
                "type": "string",
                "description": "Name of the governorate."
            },
            "shippingCost": {
                "type": "number",
                "description": "The shipping cost for this governorate."
            }
        },
        "required": ["id", "name", "shippingCost"]
    },
    "OrderCounter": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "OrderCounter",
        "type": "object",
        "description": "A counter to generate sequential order numbers.",
        "properties": {
            "currentNumber": {
                "type": "number",
                "description": "The last used order number."
            }
        },
        "required": ["currentNumber"]
    },
    "ContactMessage": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ContactMessage",
      "type": "object",
      "description": "Represents a message sent through the contact form.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the message."
        },
        "name": {
          "type": "string",
          "description": "Name of the person sending the message."
        },
        "email": {
          "type": "string",
          "description": "Email of the person sending the message.",
          "format": "email"
        },
        "subject": {
          "type": "string",
          "description": "Subject of the message."
        },
        "message": {
          "type": "string",
          "description": "The content of the message."
        },
        "isRead": {
          "type": "boolean",
          "description": "Whether the message has been read by an admin."
        },
        "createdAt": {
          "type": "string",
          "description": "The date the message was sent.",
          "format": "date-time"
        }
      },
      "required": ["id", "name", "email", "subject", "message", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "collections": {
      "/products": {
        "schema": {
          "$ref": "#/entities/Product"
        },
        "description": "Stores all products available in the e-commerce store."
      },
      "/categories": {
        "schema": {
            "$ref": "#/entities/Category"
        },
        "description": "Stores all product categories."
      },
      "/brands": {
        "schema": {
            "$ref": "#/entities/Brand"
        },
        "description": "Stores all product brands."
      },
      "/users/{userId}/orders": {
        "schema": {
          "$ref": "#/entities/Order"
        },
        "description": "Stores orders for each user."
      },
      "/users/{userId}/orders/{orderId}/items": {
        "schema": {
            "$ref": "#/entities/OrderItem"
        },
        "description": "Stores items for a specific order."
      },
       "/contactMessages": {
        "schema": {
          "$ref": "#/entities/ContactMessage"
        },
        "description": "Stores messages sent from the contact form."
      },
      "/settings/heroSection": {
        "schema": {
          "$ref": "#/entities/HeroSection"
        },
        "description": "Stores the configuration for the homepage hero section. This is a single-document collection."
      },
      "/settings/socialLinks": {
        "schema": {
          "$ref": "#/entities/SocialLinks"
        },
        "description": "Stores the social media links for the website footer. This is a single-document collection."
      },
      "/shippingGovernorates": {
        "schema": {
            "$ref": "#/entities/ShippingGovernorate"
        },
        "description": "Stores the shipping governorates and their costs."
      },
      "/counters/orders": {
        "schema": {
            "$ref": "#/entities/OrderCounter"
        },
        "description": "Stores the counter for generating sequential order numbers. This is a single-document collection."
      }
    }
  }
}
